CREATE DATABASE IF NOT EXISTS `fv_user`;

CREATE TABLE `t_user`
(
    `id_user` INT NOT NULL PRIMARY KEY,
    `user_name` VARCHAR(60) NOT NULL,
    `user_birthday` DATE
);

ALTER TABLE  `t_user`
MODIFY `user_birthday` DATE NOT NULL;
ALTER TABLE  `t_user`
MODIFY `id_user` TINYINT(2);


